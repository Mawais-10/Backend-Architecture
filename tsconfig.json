{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "./src",
    "outDir": "dist",
    /* Language & Runtime */
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "*": [
        "*"
      ]
    },
    /* Build Output */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    /* Interop & Imports */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Type Safety */
    "strict": true,
    "skipLibCheck": true,
    /* Quality of Life */
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}